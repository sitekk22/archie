.TH rand 3 2023-02-05 "Linux man-pages 6.03"
.SH NAME
rand, rand_r, srand \- pseudo-random number generator
.SH LIBRARY
Standard C library
.RI ( libc ", " \-lc )
.SH SYNOPSIS
.nf
.B #include <stdlib.h>
.PP
.B int rand(void);
.BI "void srand(unsigned int " seed );
.PP
.BI "[[deprecated]] int rand_r(unsigned int *" seedp );
.fi
.PP
.RS -4
